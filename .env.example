# Say What? Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# App Settings
# ===================
DEBUG=false
SECRET_KEY=your-secret-key-here-change-in-production

# ===================
# Database
# ===================
DATABASE_URL=sqlite:///./say_what.db

# ===================
# API Keys (for pre-loading demo content)
# Users will provide their own keys for processing their videos
# ===================

# OpenAI - for summarization and embeddings
OPENAI_API_KEY=sk-...

# OR Anthropic - for summarization
ANTHROPIC_API_KEY=sk-ant-...

# ===================
# Whisper Settings
# ===================
# Options: tiny, base, small, medium, large
WHISPER_MODEL=base

# ===================
# Chunking Settings
# ===================
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# ===================
# Rate Limiting
# ===================
MAX_EXTRACTIONS_PER_SESSION=5

# ===================
# Temp Directory
# ===================
TEMP_DIR=./temp
